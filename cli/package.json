{
  "name": "lynxprompt",
  "version": "1.0.11",
  "description": "CLI for LynxPrompt - Generate AI IDE configuration files",
  "author": "LynxPrompt Contributors",
  "license": "SEE LICENSE FILE",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeiserX/LynxPrompt.git",
    "directory": "cli"
  },
  "homepage": "https://lynxprompt.com",
  "keywords": [
    "ai",
    "ide",
    "cursor",
    "copilot",
    "claude",
    "windsurf",
    "cursorrules",
    "agents-md",
    "cli"
  ],
  "type": "module",
  "bin": {
    "lynxprompt": "./dist/index.js",
    "lynxp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:binaries": "tsup && pkg .",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist binaries"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "open": "^10.1.2",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9",
    "@yao-pkg/pkg": "^6.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "targets": [
      "node22-linux-x64",
      "node22-linux-arm64",
      "node22-macos-x64",
      "node22-macos-arm64",
      "node22-win-x64"
    ],
    "outputPath": "binaries"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
