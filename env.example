# =============================================================================
# LynxPrompt Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# DATABASES (Triple database architecture)
# =============================================================================
# APP Database - System templates, platforms, languages (can be recreated from seed)
DATABASE_URL_APP=postgresql://lynxprompt_app:app_password@localhost:5432/lynxprompt_app?schema=public

# USERS Database - User data, sessions, preferences (GOLDEN - critical backups!)
DATABASE_URL_USERS=postgresql://lynxprompt_users:users_password@localhost:5433/lynxprompt_users?schema=public

# SUPPORT Database - Feedback forum data (bugs, suggestions, votes)
DATABASE_URL_SUPPORT=postgresql://lynxprompt_support:support_password@localhost:5434/lynxprompt_support?schema=public

# =============================================================================
# NEXTAUTH - Authentication
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth
# Create at: https://github.com/settings/developers
# - Set Homepage URL to: http://localhost:3000
# - Set Authorization callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (optional)
# Create at: https://console.cloud.google.com/apis/credentials
# - Set Authorized redirect URIs to: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# EMAIL / SMTP (for magic links)
# =============================================================================
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@lynxprompt.com

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
APP_NAME=LynxPrompt
# Note: Use NEXTAUTH_URL for the app URL - no need for a separate APP_URL

# Use mock data instead of database (default: false)
# Set to true for quick demos without database setup
MOCK=false

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Analytics (optional)
# ANALYTICS_ID=

# Sentry Error Tracking (optional)
# SENTRY_DSN=

# Redis for caching/sessions (optional)
# REDIS_URL=redis://localhost:6379
