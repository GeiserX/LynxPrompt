// Prisma schema for USER DATA (Golden - Critical backups)
// This database contains all user-specific data that must be preserved

generator client {
  provider            = "prisma-client"
  output              = "../src/generated/prisma-users"
  importFileExtension = ""
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// AUTHENTICATION & USERS
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  // Provider-specific identifiers (captured at sign-in time)
  providerEmail     String?  // Email from OAuth provider (e.g., Google email)
  providerUsername  String?  // Username from OAuth provider (e.g., GitHub username)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  // Passkey 2FA verification state
  passkeyVerified   Boolean   @default(false)  // Whether passkey was verified for this session
  passkeyVerifiedAt DateTime?                  // When passkey was last verified
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Profile fields (user onboarding)
  displayName      String?   // For author attribution in templates
  persona          String?   // backend, frontend, fullstack, devops, etc.
  skillLevel       String?   // novice, intermediate, senior
  profileCompleted Boolean   @default(false)  // Track if onboarding done

  // Public profile visibility settings
  isProfilePublic  Boolean   @default(false)  // Allow others to view profile page
  showJobTitle     Boolean   @default(false)  // Show persona/job title on public profile
  showSkillLevel   Boolean   @default(false)  // Show skill level on public profile

  // Social links (optional, displayed on public profile)
  socialGithub     String?   // GitHub username
  socialTwitter    String?   // Twitter/X username  
  socialLinkedin   String?   // LinkedIn username or full URL
  socialWebsite    String?   // Personal website URL
  socialYoutube    String?   // YouTube channel URL or username
  socialBluesky    String?   // Bluesky handle
  socialMastodon   String?   // Mastodon handle (e.g., @user@instance.social)
  socialDiscord    String?   // Discord username

  // Subscription & Billing (Stripe)
  stripeCustomerId       String?   @unique // Stripe Customer ID
  stripeSubscriptionId   String?   // Stripe Subscription ID
  subscriptionPlan       SubscriptionPlan @default(FREE)
  subscriptionStatus     String?   // active, canceled, past_due, unpaid, trialing
  currentPeriodEnd       DateTime? // When current billing period ends
  cancelAtPeriodEnd      Boolean   @default(false)

  // AI Usage Tracking (for MAX users)
  aiTokensUsedThisPeriod Int       @default(0)   // Total tokens used this billing period
  aiUsageResetAt         DateTime? // When to reset token count (aligned with billing period)
  aiLastRequestAt        DateTime? // For rate limiting
  aiRequestsThisMinute   Int       @default(0)   // Counter reset every minute

  // Legal Consent Tracking (GDPR/EU compliance)
  termsAcceptedAt        DateTime? // When user accepted Terms of Service
  termsVersion           String?   // Version of Terms accepted (e.g., "2025-12")
  privacyAcceptedAt      DateTime? // When user accepted Privacy Policy
  privacyVersion         String?   // Version of Privacy Policy accepted

  // Seller Payout Settings
  paypalEmail    String?   // PayPal email for receiving payouts

  // Activity tracking (for Teams billing - track last login)
  lastLoginAt    DateTime? // Last time user logged in (updated on session creation)

  // Relations
  accounts       Account[]
  sessions       Session[]
  preferences    Preference[]
  templates      UserTemplate[]
  projects       Project[]
  authenticators Authenticator[]
  favorites      TemplateFavorite[]
  downloads      TemplateDownload[]
  purchases      BlueprintPurchase[]
  payouts        Payout[]
  teamMemberships TeamMember[] // Teams user belongs to

  @@index([email])
  @@index([role])
  @@index([stripeCustomerId])
  @@index([subscriptionPlan])
  @@index([lastLoginAt])
}

enum UserRole {
  USER
  ADMIN
  SUPERADMIN
}

enum SubscriptionPlan {
  FREE
  PRO
  MAX
  TEAMS
}

// ============================================================================
// TEAMS - Enterprise team management
// ============================================================================

enum TeamRole {
  ADMIN   // Can invite/remove members, manage billing, configure SSO
  MEMBER  // Regular team member with Teams tier access
}

enum TeamInvitationStatus {
  PENDING   // Invitation sent, awaiting acceptance
  ACCEPTED  // User accepted and joined
  EXPIRED   // Invitation expired (7 days default)
  REVOKED   // Admin revoked before acceptance
}

enum SSOProvider {
  SAML      // SAML 2.0 (Okta, Azure AD, OneLogin, etc.)
  OIDC      // OpenID Connect (Google Workspace, Auth0, etc.)
  LDAP      // LDAP/Active Directory direct connection
}

enum BlueprintVisibility {
  PRIVATE   // Only the author can see/access
  TEAM      // All team members can see/access
  PUBLIC    // Anyone can see/access (subject to pricing)
}

model Team {
  id            String   @id @default(cuid())
  name          String   // Company/team display name
  slug          String   @unique // URL-friendly identifier (e.g., "acme-corp")
  
  // Billing - handled by team admin(s)
  stripeCustomerId     String?   @unique // Stripe Customer ID for the team
  stripeSubscriptionId String?   // Stripe Subscription ID (per-seat)
  billingCycleStart    DateTime? // When current billing cycle started
  maxSeats             Int       @default(3) // Prepaid seats (minimum 3)
  
  // AI Usage Settings (Teams get higher limits)
  aiUsageLimitPerUser  Int       @default(1500) // €15 = 1500 cents max AI spend per user/month
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  members       TeamMember[]
  invitations   TeamInvitation[]
  ssoConfig     TeamSSOConfig?
  billingRecords TeamBillingRecord[]
  blueprints    UserTemplate[]  // Team-shared blueprints
  purchases     BlueprintPurchase[]  // Templates purchased by team members (shared with all)
  
  @@index([slug])
  @@index([stripeCustomerId])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  
  // Activity tracking for billing
  joinedAt      DateTime  @default(now())
  lastActiveAt  DateTime? // Last login while in this team (for billing)
  
  // Billing status
  isActiveThisCycle Boolean @default(false) // Has logged in this billing cycle
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([teamId, userId]) // User can only be in a team once
  @@index([teamId])
  @@index([userId])
  @@index([lastActiveAt])
}

model TeamInvitation {
  id        String   @id @default(cuid())
  teamId    String
  email     String   // Email to invite
  role      TeamRole @default(MEMBER) // Role to assign when accepted
  
  // Invitation token (sent via magic link)
  token     String   @unique @default(cuid())
  expiresAt DateTime // Default: 7 days from creation
  
  // Status tracking
  status    TeamInvitationStatus @default(PENDING)
  
  // Audit
  invitedBy String   // User ID of admin who sent invite
  createdAt DateTime @default(now())
  acceptedAt DateTime?
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@index([teamId])
  @@index([email])
  @@index([token])
  @@index([status])
}

model TeamSSOConfig {
  id        String   @id @default(cuid())
  teamId    String   @unique
  
  // SSO Provider Configuration
  provider  SSOProvider
  enabled   Boolean  @default(false)
  
  // Provider-specific configuration (JSON)
  // For SAML: { entityId, ssoUrl, certificate, signatureAlgorithm, etc. }
  // For OIDC: { issuer, clientId, clientSecret, authorizationUrl, tokenUrl, etc. }
  // For LDAP: { host, port, baseDn, bindDn, bindPassword, userFilter, etc. }
  config    Json
  
  // Optional: restrict to specific email domains
  allowedDomains String[] // e.g., ["acme.com", "acme.co.uk"]
  
  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastSyncAt DateTime? // Last successful SSO sync
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model TeamBillingRecord {
  id        String   @id @default(cuid())
  teamId    String
  
  // Billing period
  periodStart DateTime
  periodEnd   DateTime
  
  // Seat counts for this period
  totalSeats     Int // Max seats configured
  activeSeats    Int // Users who logged in during period
  billedSeats    Int // MAX(activeSeats, 3) - what was actually charged
  
  // Financial
  amountBilled   Int // Total amount in cents (billedSeats × €30)
  currency       String @default("EUR")
  stripeInvoiceId String? // Reference to Stripe invoice
  
  // Credits (for unused seats from previous cycle)
  creditApplied  Int @default(0) // Credit in cents applied to this invoice
  creditGenerated Int @default(0) // Credit generated for next cycle (if active < billed)
  
  createdAt DateTime @default(now())
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@index([teamId])
  @@index([periodStart])
  @@index([periodEnd])
}

// ============================================================================
// PASSKEYS (WebAuthn Authenticators)
// ============================================================================

model Authenticator {
  id                   String   @id @default(cuid())
  userId               String
  credentialID         String   @unique
  credentialPublicKey  Bytes
  counter              BigInt
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String[]
  name                 String?  // User-friendly name like "MacBook Touch ID"
  createdAt            DateTime @default(now())
  lastUsedAt           DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// USER PREFERENCES - Memory of past decisions
// ============================================================================

model Preference {
  id        String   @id @default(cuid())
  userId    String
  category  String   // e.g., "license", "funding", "cicd", "testing"
  key       String   // e.g., "default_license", "github_sponsors_username"
  value     String   @db.Text // JSON or plain text value
  isDefault Boolean  @default(false)
  usageCount Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, category, key])
  @@index([userId])
  @@index([category])
}

// ============================================================================
// USER TEMPLATES - User-created templates (NOT system templates)
// ============================================================================

model UserTemplate {
  id          String       @id @default(cuid())
  userId      String
  name        String
  description String?
  type        TemplateType
  content     String       @db.Text   // ALWAYS stored with placeholders like {{AUTHOR_NAME}}
  variables   Json?                    // Default values for variables (NOT personal data)
  
  // Visibility: PRIVATE (author only), TEAM (team members), PUBLIC (everyone)
  // Replaces isPublic - migration: isPublic=true → PUBLIC, isPublic=false → PRIVATE
  visibility   BlueprintVisibility @default(PRIVATE)
  isPublic     Boolean      @default(false) // DEPRECATED: Use visibility instead. Kept for backwards compat.
  isOfficial   Boolean      @default(false)  // Official LynxPrompt templates
  
  // Team ownership (optional - if set, blueprint belongs to team)
  teamId       String?      // If set, this is a team blueprint
  
  // Statistics (denormalized for performance, updated via triggers/API)
  downloads    Int          @default(0)
  favorites    Int          @default(0)
  
  // Pricing (null = free, value in cents)
  price        Int?         // Price in cents (e.g., 499 = €4.99). Null = free
  currency     String       @default("EUR") // ISO currency code
  
  // Revenue tracking for authors (70% to author, 30% platform fee)
  totalRevenue Int          @default(0)  // Total revenue in cents for this template
  
  tier             TemplateTier @default(INTERMEDIATE)
  targetPlatform   String?
  compatibleWith   String[]
  tags             String[]
  category         String?
  difficulty       String?
  
  // Privacy: defines which fields contain personal data and should be stripped when sharing
  // Format: { "AUTHOR_NAME": { "label": "Author Name", "private": true }, ... }
  sensitiveFields  Json?
  
  // AI disclosure: was this blueprint created with AI assistance?
  aiAssisted       Boolean      @default(false)
  
  // Showcase URL: link to demo, GitHub repo, or live app built with this blueprint
  showcaseUrl      String?
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  team      Team?              @relation(fields: [teamId], references: [id], onDelete: SetNull)
  purchases BlueprintPurchase[]

  @@index([userId])
  @@index([type])
  @@index([isPublic])
  @@index([visibility])
  @@index([teamId])
  @@index([tier])
  @@index([downloads])
  @@index([favorites])
  @@index([price])
}

// ============================================================================
// PAYOUTS - Track seller payouts
// ============================================================================

model Payout {
  id            String       @id @default(cuid())
  userId        String
  
  // Payout details
  amount        Int          // Amount in cents
  currency      String       @default("EUR")
  paypalEmail   String       // PayPal email used (snapshot at time of payout)
  
  // Status tracking
  status        PayoutStatus @default(PENDING)
  
  // External references
  paypalTransactionId String?  // PayPal transaction ID once processed
  notes         String?      // Admin notes
  
  // Timestamps
  requestedAt   DateTime     @default(now())
  processedAt   DateTime?    // When payout was completed
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([requestedAt])
}

enum PayoutStatus {
  PENDING     // Requested, awaiting processing
  PROCESSING  // Currently being processed
  COMPLETED   // Successfully sent
  FAILED      // Failed to process
  CANCELLED   // Cancelled by user or admin
}

// ============================================================================
// BLUEPRINT PURCHASES - Track paid blueprint purchases
// ============================================================================

model BlueprintPurchase {
  id            String   @id @default(cuid())
  userId        String
  templateId    String
  
  // Team purchase: if set, the blueprint is available to all team members
  // When a team user purchases, the purchase is made for the team
  teamId        String?
  
  // Payment details
  amount        Int      // Amount paid in cents
  currency      String   // ISO currency code
  stripePaymentId String? @unique // Stripe Payment Intent ID
  
  // Revenue split (stored for historical accuracy)
  authorShare   Int      // 70% to author
  platformFee   Int      // 30% platform fee
  
  createdAt     DateTime @default(now())
  
  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  template UserTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  team     Team?        @relation(fields: [teamId], references: [id], onDelete: SetNull)
  
  @@unique([userId, templateId]) // One purchase per user per template (for individual users)
  @@unique([teamId, templateId]) // One purchase per team per template
  @@index([userId])
  @@index([teamId])
  @@index([templateId])
  @@index([createdAt])
}

enum TemplateTier {
  SIMPLE
  INTERMEDIATE
  ADVANCED
}

enum TemplateType {
  LICENSE
  FUNDING
  CURSORRULES       // Legacy - keep for backwards compat
  CURSOR_RULES      // New standard (still deprecated in favor of AGENTS_MD)
  CLAUDE_MD
  COPILOT_INSTRUCTIONS
  WINDSURF_RULES
  AGENTS_MD         // Universal AGENTS.md - Recommended
  CLINE_RULES
  CODEX_MD
  GITIGNORE
  README
  CONTRIBUTING
  CODE_OF_CONDUCT
  SECURITY
  DOCKERFILE
  DOCKER_COMPOSE
  GITHUB_ACTIONS
  GITLAB_CI
  EDITORCONFIG
  PRETTIER
  ESLINT
  PRE_COMMIT
  CUSTOM
}

// ============================================================================
// PROJECTS - User's saved configurations
// ============================================================================

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  config      Json
  persona     String?
  languages   String[]
  frameworks  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedFiles GeneratedFile[]

  @@index([userId])
  @@index([persona])
}

// ============================================================================
// TEMPLATE FAVORITES - Track which users favorited which templates
// ============================================================================

model TemplateFavorite {
  id           String   @id @default(cuid())
  userId       String
  templateId   String   // Can be SystemTemplate or UserTemplate ID
  templateType String   // "system" or "user" - which database the template is in
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, templateId, templateType])
  @@index([templateId, templateType])
  @@index([userId])
}

// ============================================================================
// TEMPLATE DOWNLOADS - Track template downloads (can be anonymous)
// ============================================================================

model TemplateDownload {
  id           String   @id @default(cuid())
  userId       String?  // null for anonymous downloads
  templateId   String
  templateType String   // "system" or "user"
  platform     String?  // which IDE they downloaded for (cursor, claude, etc.)
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([templateId, templateType])
  @@index([userId])
  @@index([createdAt])
}

// ============================================================================
// GENERATED FILES - User's generated output files
// ============================================================================

model GeneratedFile {
  id        String   @id @default(cuid())
  projectId String
  type      TemplateType
  filename  String
  filepath  String
  content   String   @db.Text
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}
